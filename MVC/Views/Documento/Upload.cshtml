@{
	ViewData["Title"] = "Importar Arquivo";
}

@using (Html.BeginForm("UploadDocumento", "Documento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
	<div class="text-left">
		<h2>Selecione Seu Arquivo Para Importar Para o Site</h2>
		<div class="form-group">
			<input class="form-control" type="file" name="file" />
		</div>
		<div class="form-group">
			<input type="submit" value="Importar" class="btn btn-primary" />
		</div>
	</div>
}

@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}